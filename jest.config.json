{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "test/**/*.ts",
    "!src/main.ts",
    "!src/common/services/api/api.service.ts",
    "!src/datadog/client.ts",
    "!src/common/utils/timer.ts"
  ],
  "coverageDirectory": "./coverage"
}
